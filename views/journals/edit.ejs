<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <div>
            <h1>Edit <%= journal.name %></h1>
            <form action="/journals/<%= journal._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name: </label>
                    <div>
                        <input type="text" name="journal[name]" id="name" value="<%= journal.name %>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="image">Image URL: </label>
                    <div>
                        <input type="text" name="journal[image]" id="image" value="<%= journal.image %>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description: </label>
                    <div>
                        <textarea name="journal[description]" id="description" cols="30"
                            rows="10"><%= journal.description %></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/journals">Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>