<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <div>
            <h1>Create new Journal</h1>
            <form action="/journals" method="POST">
                <div class="form-group">
                    <label for="name">Name: </label>
                    <div>
                        <input type="text" name="name" id="name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="image">Image URL: </label>
                    <div>
                        <input type="text" name="image" id="image">
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description: </label>
                    <div>
                        <textarea name="description" cols="30" rows="10" id="description"></textarea>
                    </div>
                </div>
                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" name="map-check" id="map-check">
                    <label class="form-check-label" for="map-check">Include Map?</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/journals">Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>