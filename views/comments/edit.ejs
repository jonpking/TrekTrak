<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <div>
            <h1>Edit comment</h1>
            <form action="/journals/<%= journal_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[author]" value="<%= comment.author %>">
                </div>
                <div class="form-group">
                    <textarea name="comment[text]" id="commentText" cols="30" rows="10"><%=comment.text%></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/journals">Back</a>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>