<%- include ("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center formHeaderText">Edit comment</h1>
            <div class="card">
                <div class="card-body">
                    <form action="/journals/<%= journal_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <textarea class="form-control border-dark" name="comment[text]" id="commentText" cols="30"
                                rows="10" aria-describedby="commentTextHelp"><%= comment.text %></textarea>
                            <small id="commentTextHelp" class="form-text text-muted">300 character limit</small>
                        </div>
                        <div class="formSubmitBtnDiv">
                            <input class="btn-block" type="submit" value="Submit">
                        </div>
                    </form>
                </div>
            </div>
            <!-- <a href="/journals">Back</a> -->
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>