<%- include ("partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center formHeaderText">Register</h1>
            <div class="card">
                <div class="card-body">
                    <form action="/register" method="post">
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input class="form-control border-dark" type="text" name="username" id="username"
                                aria-describedby="usernameRegistrationHelp">
                            <small id="usernameRegistrationHelp" class="form-text text-muted">Must be 4-20 alphanumeric
                                characters</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input class="form-control border-dark" type="password" name="password" id="password"
                                aria-describedby="passwordRegistrationHelp">
                            <small id="passwordRegistrationHelp" class="form-text text-muted">Must be 8-64
                                characters</small>
                        </div>
                        <div class="formSubmitBtnDiv">
                            <input class="btn-block" type="submit" value="Register">
                        </div>
                    </form>
                </div>
            </div>
            <!-- <div class="text-center">
                <a href="/journals">Back</a>
            </div> -->
        </div>
    </div>
</div>

<%- include ("partials/footer") %>